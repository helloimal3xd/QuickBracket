<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvEquipo1"
        android:text=""
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etPuntosEquipo1"
        android:hint="Marcador"
        android:inputType="number"
        android:backgroundTint="#90A4AE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnGanador1"
        android:text="Ganador"
        android:backgroundTint="#8E24AA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:layout_marginVertical="12dp"/>

    <TextView
        android:id="@+id/tvEquipo2"
        android:text="Team B"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etPuntosEquipo2"
        android:hint="Marcador"
        android:inputType="number"
        android:backgroundTint="#90A4AE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnGanador2"
        android:text="Ganador"
        android:backgroundTint="#8E24AA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
