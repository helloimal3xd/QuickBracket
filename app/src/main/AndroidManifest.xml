<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_removebg"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_removebg"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuickBracket"
        tools:targetApi="31">
        <activity
            android:name=".LoginActivity"
            android:exported="true"

            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegistroActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickBracket"
            />

        <activity android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickBracket"
            />

        <activity
            android:name=".CrearTorneoActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickBracket"
            />

        <activity
            android:name=".RegistrarEquiposActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickBracket"
            tools:ignore="Instantiatable" />

        <activity android:name=".ui.brackets.BracketActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickBracket"
            tools:ignore="Instantiatable" />

        <activity android:name=".DetalleTorneoActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickBracket"
            tools:ignore="Instantiatable" />

        <activity android:name=".MisReglamentosActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickBracket"
            tools:ignore="Instantiatable" />


    </application>

</manifest>